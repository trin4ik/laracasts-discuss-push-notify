{
    "manifest_version": 2,
    "name": "Laracasts Discuss Push Notify",
    "version": "0.2",
    "description": "add  push notifications for thread answers",
    "background": {
        "page": "background/index.html"
    },
    "permissions": [
        "storage",
        "notifications"
    ],
    "content_scripts": [
        {
            "css": [
                "index.css"
            ],
            "js": [
                "index.js"
            ],
            "matches": [
                "https://laracasts.com/discuss*",
                "https://unpkg.com/*"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "lib/*",
        "vendor/*",
        "page/*"
    ],
    "externally_connectable": {
        "matches": [
            "https://laracasts.com/discuss*"
        ],
        "accepts_tls_channel_id": false
    },
    "options_ui": {
        "page": "options/index.html",
        "open_in_tab": false
    },
    "icons": {
        "16": "image/16.png",
        "32": "image/32.png",
        "48": "image/48.png",
        "128": "image/128.png"
    },
    "browser_action": {
        "default_popup": "options/index.html"
    }
}
