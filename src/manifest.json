{
    "manifest_version": 2,
    "name": "Laracasts Discuss Push Notify",
    "version": "0.3",
    "description": "add  push notifications for thread answers",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "storage",
        "notifications"
    ],
    "content_scripts": [
        {
            "js": [
                "page.js"
            ],
            "css": [
                "page.css"
            ],
            "matches": [
                "https://laracasts.com/discuss*"
            ],
            "run_at": "document_end"
        }
    ],
    "options_ui": {
        "page": "settings.html"
    },
    "icons": {
        "16": "image/16.png",
        "32": "image/32.png",
        "48": "image/48.png",
        "128": "image/128.png"
    },
    "browser_action": {
        "default_popup": "settings.html"
    }
}
