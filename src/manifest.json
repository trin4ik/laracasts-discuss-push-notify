{
    "manifest_version": 2,
    "name": "Laracasts Discuss Push Notifications",
    "description": "add feature 'follow by push'",
    "version": "0.33",
    "icons": {
        "16": "image/16.png",
        "32": "image/32.png",
        "48": "image/48.png",
        "128": "image/128.png"
    },
    "background": {
        "scripts": [
            "browser-polyfill.js",
            "background.js"
        ]
    },
    "permissions": [
        "storage",
        "notifications",
        "*://*.laracasts.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.laracasts.com/*"
            ],
            "js": [
                "browser-polyfill.js",
                "content.js"
            ],
            "css": [
                "content.css"
            ]
        }
    ],
    "options_ui": {
        "page": "options.html"
    },
    "browser_action": {
        "default_popup": "options.html"
    }
}
